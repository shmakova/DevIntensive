<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activities.MainActivity"
    android:id="@+id/navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_coordinator_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:theme="@style/AppTheme.AppBarOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_primary">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/color_primary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/user_photo_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_image_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/photo"/>

                <android.support.v7.widget.Toolbar
                    android:theme="@style/AppTheme.PopupOverlay"
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginTop="@dimen/size_small_24"
                    android:titleTextColor="@color/white"
                    app:layout_collapseMode=oolbar"pin"/>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:orientation="horizontal">

                    <LinearLayout style="@style/text_wrapper">
                        <TextView
                            style="@style/top_bar_text.large"
                            android:text="5"
                            android:id="@+id/rating" />

                        <TextView
                            style="@style/top_bar_text"
                            android:text="@string/rating"
                            android:id="@+id/rating_text"/>
                    </LinearLayout>

                    <View style="@style/vertical_line"></View>

                    <LinearLayout style="@style/text_wrapper.middle">
                        <TextView
                            style="@style/top_bar_text.large"
                            android:text="1020"
                            android:id="@+id/loc" />

                        <TextView
                            style="@style/top_bar_text"
                            android:text="@string/loc"
                            android:id="@+id/loc_text"/>
                    </LinearLayout>

                    <View style="@style/vertical_line"></View>

                    <LinearLayout style="@style/text_wrapper">
                        <TextView
                            style="@style/top_bar_text.large"
                            android:text="9"
                            android:id="@+id/projects" />

                        <TextView
                            style="@style/top_bar_text"
                            android:text="@string/projects"
                            android:id="@+id/projects_text"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:paddingBottom="@dimen/activity_vertical_margin"
                              android:paddingLeft="@dimen/activity_horizontal_margin"
                              android:paddingRight="@dimen/activity_horizontal_margin"
                              android:orientation="vertical">

                    <LinearLayout style="@style/item">

                        <ImageView
                            style="@style/icon.left"
                            android:src="@drawable/ic_call_black_24dp" />

                        <LinearLayout style="@style/edit_text_wrapper">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/phone_et"
                                    style="@style/edit_text"
                                    android:inputType="phone"
                                    android:hint="@string/phone"
                                    android:text="89235098145" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/call_img"
                            style="@style/icon.right"
                            android:src="@drawable/ic_phone_in_talk_black_24dp" />
                    </LinearLayout>

                    <View style="@style/line"></View>

                    <LinearLayout style="@style/item">

                        <ImageView
                            style="@style/icon.left"
                            android:src="@drawable/ic_email_black_24dp" />

                        <LinearLayout style="@style/edit_text_wrapper">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/email_et"
                                    style="@style/edit_text"
                                    android:inputType="textEmailAddress"
                                    android:hint="@string/e_mail"
                                    android:text="shmakova-nastya@yandex.ru"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <ImageView
                            style="@style/icon.right"
                            android:src="@drawable/ic_send_black_24dp" />
                    </LinearLayout>

                    <View style="@style/line"></View>

                    <LinearLayout style="@style/item">

                        <ImageView
                            style="@style/icon.left"
                            android:src="@drawable/ic_vk_circle" />

                        <LinearLayout style="@style/edit_text_wrapper">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/vk_et"
                                    style="@style/edit_text"
                                    android:hint="@string/vk"
                                    android:text="vk.com/id6443224"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <ImageView
                            style="@style/icon.right"
                            android:src="@drawable/ic_visibility_black_24dp" />
                    </LinearLayout>

                    <View style="@style/line"></View>

                    <LinearLayout style="@style/item">
                        <ImageView
                            style="@style/icon.left"
                            android:src="@drawable/ic_github_circle" />

                        <LinearLayout style="@style/edit_text_wrapper">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/github_et"
                                    style="@style/edit_text"
                                    android:hint="@string/github"
                                    android:text="github.com/shmakova"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <ImageView
                            style="@style/icon.right"
                            android:src="@drawable/ic_visibility_black_24dp" />
                    </LinearLayout>

                    <View style="@style/line"></View>

                    <LinearLayout style="@style/item">
                        <ImageView
                            style="@style/icon.left"
                            android:src="@drawable/ic_account_circle" />

                        <LinearLayout style="@style/edit_text_wrapper">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/about_et"
                                    style="@style/edit_text"
                                    android:hint="@string/about"
                                    android:text="@string/lorem_ipsum"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <ImageView
                            style="@style/icon.right"
                            android:src="@drawable/ic_visibility_black_24dp" />
                    </LinearLayout>

                    <View style="@style/line"></View>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu"></android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
